{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "WordBlock",
  "short_name": "WB",
  "description": "A web3 note-taking tool built for open and interactive block reference",
  "default_locale": "en",
  "minimum_chrome_version": "89",
  "permissions": ["tabs", "storage", "contextMenus"],
  "host_permissions": ["*://*/*", "http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/img/*"],
      "matches": ["*://*/*", "http://*/*", "https://*/*"],
      "extension_ids": ["fddpnmfnomekiopfkplddiepdjgceaml"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval';object-src 'self'"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/contents.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/img/icon-16x16.png",
      "48": "assets/img/icon-48x48.png",
      "128": "assets/img/icon-128x128.png"
    },
    "default_title": "Word Block Extension",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/img/icon-16x16.png",
    "48": "assets/img/icon-48x48.png",
    "128": "assets/img/icon-128x128.png"
  }
}
